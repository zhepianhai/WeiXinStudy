/* pages/login/login.wxss */
page {
  height: 100%;
}

.contents {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 300rpx;
  background-color: aqua;
  align-items: center;
}

/** 布局页面 */
.mainBg {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color: #f4f4f4;
}
.logo {
  width: 100%;
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content {
  flex: 6;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-box {
  top: 0;
  background-color: #fff;
  margin-left: 20px;
  margin-right: 20px;
  padding: 5px;
  height: 50%;
  border: 0.5px solid;
  border-radius: 10px;
  border-color: #fff;
  box-shadow: 1px 1px 4px #888888;
}
